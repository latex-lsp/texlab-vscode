{
  "name": "texlab",
  "displayName": "TexLab",
  "description": "LaTeX for Visual Studio Code",
  "version": "0.3.0",
  "publisher": "efoerster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/efoerster/texlab-vscode"
  },
  "homepage": "https://texlab.netlify.com/",
  "bugs": {
    "url": "https://github.com/efoerster/texlab-vscode/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "latex",
    "tex",
    "bibtex"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F5F5F5",
    "theme": "light"
  },
  "preview": true,
  "badges": [
    {
      "url": "https://travis-ci.com/efoerster/texlab-vscode.svg?branch=master",
      "href": "https://travis-ci.com/efoerster/texlab-vscode",
      "description": "Continuous integration"
    }
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:bibtex",
    "workspaceContains:**/*.{bib,tex}"
  ],
  "main": "./out/main",
  "contributes": {
    "configuration": [
      {
        "title": "LaTeX configuration",
        "properties": {
          "latex.build.executable": {
            "type": "string",
            "default": "latexmk",
            "description": "Path to a LaTeX build tool."
          },
          "latex.build.args": {
            "type": "array",
            "default": [
              "-pdf",
              "-interaction=nonstopmode",
              "-synctex=1"
            ],
            "description": "Additional arguments that are passed to the build tool."
          },
          "latex.build.onSave": {
            "type": "boolean",
            "default": false,
            "description": "Build after saving a file"
          },
          "latex.forwardSearch.executable": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Path to a PDF previewer that supports SyncTeX."
          },
          "latex.forwardSearch.args": {
            "type": "array",
            "default": [],
            "description": "Additional arguments that are passed to the previewer."
          }
        }
      },
      {
        "title": "BibTeX configuration",
        "properties": {
          "bibtex.formatting.lineLength": {
            "type": "integer",
            "default": 120,
            "description": "Maximum amount of characters per line (0 = disable)."
          }
        }
      }
    ],
    "configurationDefaults": {
      "[latex]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false
      },
      "[bibtex]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false
      }
    },
    "commands": [
      {
        "command": "latex.build",
        "title": "Build File",
        "description": "Builds the current file.",
        "category": "LaTeX"
      },
      {
        "command": "latex.build.cancel",
        "title": "Cancel Build",
        "description": "Cancels the current build.",
        "category": "LaTeX"
      },
      {
        "command": "latex.forwardSearch",
        "title": "Forward Search",
        "description": "Performs a forward search from the current file.",
        "category": "LaTeX"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "latex.build",
          "when": "editorLangId =~ /(latex|bibtex)/"
        },
        {
          "command": "latex.build.cancel",
          "when": "editorLangId =~ /(latex|bibtex)/"
        },
        {
          "command": "latex.forwardSearch",
          "when": "editorLangId == latex"
        }
      ],
      "editor/context": [
        {
          "command": "latex.forwardSearch",
          "when": "editorLangId == latex"
        }
      ]
    },
    "keybindings": [
      {
        "command": "latex.build",
        "key": "f5",
        "mac": "f5",
        "when": "editorLangId =~ /(latex|bibtex)/"
      },
      {
        "command": "latex.build.cancel",
        "key": "ctrl+pausebreak",
        "mac": "ctrl+pausebreak",
        "when": "editorLangId =~ /(latex|bibtex)/"
      },
      {
        "command": "latex.forwardSearch",
        "key": "ctrl+alt+f",
        "mac": "ctrl+alt+f",
        "when": "editorLangId == latex"
      }
    ],
    "languages": [
      {
        "id": "latex",
        "aliases": [
          "LaTeX",
          "latex"
        ],
        "extensions": [
          ".tex",
          ".sty",
          ".cls"
        ],
        "configuration": "./languages/latex.json"
      },
      {
        "id": "bibtex",
        "aliases": [
          "BibTeX",
          "bibtex"
        ],
        "extensions": [
          ".bib"
        ],
        "configuration": "./languages/bibtex.json"
      }
    ],
    "grammars": [
      {
        "language": "latex",
        "scopeName": "source.latex",
        "path": "./grammars/latex.tmLanguage.json"
      },
      {
        "language": "bibtex",
        "scopeName": "source.bibtex",
        "path": "./grammars/bibtex.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"{grammars, languages}/**/*.json\" \"*.{json,md}\" "
  },
  "devDependencies": {
    "@types/node": "^11.9.6",
    "prettier": "^1.16.4",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "typescript-tslint-plugin": "^0.3.1",
    "vscode": "^1.1.30"
  },
  "dependencies": {
    "rxjs": "^6.4.0",
    "vscode-languageclient": "^5.3.0-next.1"
  }
}

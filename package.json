{
  "name": "texlab",
  "displayName": "TexLab",
  "description": "LaTeX for Visual Studio Code",
  "version": "1.1.0",
  "publisher": "efoerster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/latex-lsp/texlab-vscode"
  },
  "homepage": "https://texlab.netlify.com/",
  "bugs": {
    "url": "https://github.com/latex-lsp/texlab-vscode/issues"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run dist",
    "dist": "webpack",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"{grammars, languages}/**/*.json\" \"*.{ts,json,yml,md}\" "
  },
  "devDependencies": {
    "@types/request": "^2.48.1",
    "@types/tar": "^4.0.2",
    "@types/unzipper": "^0.9.2",
    "@types/node": "^12.6.2",
    "@types/webpack": "^4.4.35",
    "clean-webpack-plugin": "^3.0.0",
    "prettier": "^1.17.1",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2",
    "typescript-tslint-plugin": "^0.5.4",
    "vscode": "^1.1.35",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "request": "^2.88.0",
    "tar": "^4.4.10",
    "unzipper": "^0.10.1",
    "vscode-languageclient": "^5.3.0-next.6"
  },
  "engines": {
    "vscode": "^1.35.0"
  },
  "languageServer": {
    "win32": "https://github.com/latex-lsp/texlab/releases/download/v1.1.0/texlab-x86_64-windows.zip",
    "linux": "https://github.com/latex-lsp/texlab/releases/download/v1.1.0/texlab-x86_64-linux.tar.gz",
    "darwin": "https://github.com/latex-lsp/texlab/releases/download/v1.1.0/texlab-x86_64-macos.tar.gz"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "latex",
    "tex",
    "bibtex"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F5F5F5",
    "theme": "light"
  },
  "preview": true,
  "badges": [
    {
      "url": "https://dev.azure.com/latex-lsp/texlab/_apis/build/status/latex-lsp.texlab-vscode?branchName=master",
      "href": "https://dev.azure.com/latex-lsp/texlab/_build/latest?definitionId=9&branchName=master",
      "description": "Continuous Integration"
    }
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:bibtex",
    "workspaceContains:**/*.{bib,tex}"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "LaTeX configuration",
        "properties": {
          "latex.build.executable": {
            "type": "string",
            "default": "latexmk",
            "description": "Path to a LaTeX build tool."
          },
          "latex.build.args": {
            "type": "array",
            "default": [
              "-pdf",
              "-interaction=nonstopmode",
              "-synctex=1"
            ],
            "description": "Additional arguments that are passed to the build tool."
          },
          "latex.build.onSave": {
            "type": "boolean",
            "default": false,
            "description": "Build after saving a file"
          },
          "latex.forwardSearch.executable": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Path to a PDF previewer that supports SyncTeX."
          },
          "latex.forwardSearch.args": {
            "type": "array",
            "default": [],
            "description": "Additional arguments that are passed to the previewer."
          },
          "latex.lint.onSave": {
            "type": "boolean",
            "default": true,
            "description": "Lint after saving a file"
          },
          "latex.lint.onChange": {
            "type": "boolean",
            "default": false,
            "description": "Lint after changing a file"
          }
        }
      },
      {
        "title": "BibTeX configuration",
        "properties": {
          "bibtex.formatting.lineLength": {
            "type": "integer",
            "default": 120,
            "description": "Maximum amount of characters per line (0 = disable)."
          }
        }
      }
    ],
    "configurationDefaults": {
      "[latex]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false
      },
      "[bibtex]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false
      }
    },
    "commands": [
      {
        "command": "latex.build",
        "title": "Build File",
        "description": "Builds the current file.",
        "category": "LaTeX"
      },
      {
        "command": "latex.build.cancel",
        "title": "Cancel Build",
        "description": "Cancels the current build.",
        "category": "LaTeX"
      },
      {
        "command": "latex.forwardSearch",
        "title": "Forward Search",
        "description": "Performs a forward search from the current file.",
        "category": "LaTeX"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "latex.build",
          "when": "editorLangId =~ /(latex|bibtex)/"
        },
        {
          "command": "latex.build.cancel",
          "when": "editorLangId =~ /(latex|bibtex)/"
        },
        {
          "command": "latex.forwardSearch",
          "when": "editorLangId == latex"
        }
      ],
      "editor/context": [
        {
          "command": "latex.forwardSearch",
          "when": "editorLangId == latex"
        }
      ]
    },
    "keybindings": [
      {
        "command": "latex.build",
        "key": "f5",
        "mac": "f5",
        "when": "editorLangId =~ /(latex|bibtex)/"
      },
      {
        "command": "latex.build.cancel",
        "key": "ctrl+pausebreak",
        "mac": "ctrl+pausebreak",
        "when": "editorLangId =~ /(latex|bibtex)/"
      },
      {
        "command": "latex.forwardSearch",
        "key": "ctrl+alt+f",
        "mac": "ctrl+alt+f",
        "when": "editorLangId == latex"
      }
    ],
    "languages": [
      {
        "id": "latex",
        "aliases": [
          "LaTeX",
          "latex"
        ],
        "extensions": [
          ".tex",
          ".sty",
          ".cls"
        ],
        "configuration": "./languages/latex.json"
      },
      {
        "id": "bibtex",
        "aliases": [
          "BibTeX",
          "bibtex"
        ],
        "extensions": [
          ".bib"
        ],
        "configuration": "./languages/bibtex.json"
      }
    ],
    "grammars": [
      {
        "language": "latex",
        "scopeName": "source.latex",
        "path": "./grammars/latex.tmLanguage.json"
      },
      {
        "language": "bibtex",
        "scopeName": "source.bibtex",
        "path": "./grammars/bibtex.tmLanguage.json"
      }
    ]
  }
}
